{
	"name": "sveltekit-auth-update",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"generate": "drizzle-kit generate:pg --config drizzle.config.ts",
		"migrate": "drizzle-kit push:pg --config drizzle.config.ts",
		"studio": "drizzle-kit studio --config drizzle.config.ts"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "^1.0.2",
		"@picocss/pico": "^2.0.6",
		"lucia": "^3.2.0",
		"oslo": "^1.2.1",
		"pg": "^8.11.3"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^9.6.0",
		"@types/pg": "^8.11.1",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.20.14",
		"drizzle-orm": "^0.29.3",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3"
	}
}
